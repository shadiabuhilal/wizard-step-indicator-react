{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "lib": ["dom", "dom.iterable"],
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}
